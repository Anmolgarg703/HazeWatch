<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="NODE Connect"
            android:id="@+id/btnPairedNodes"
            android:layout_weight="1"
            android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Sensors "
        android:id="@+id/btnRefreshSensors"
        android:layout_below="@+id/btnPairedNodes"
        android:layout_alignLeft="@+id/btnPairedNodes"
        android:layout_alignStart="@+id/btnPairedNodes"
        android:layout_marginTop="46dp"
        android:layout_alignRight="@+id/btnPairedNodes"
        android:layout_alignEnd="@+id/btnPairedNodes" />

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream Motion"
            android:id="@+id/btnMotion"
        android:layout_weight="1"
        android:layout_below="@+id/btnRefreshSensors"
        android:layout_toRightOf="@+id/btnOxa"
        android:layout_toEndOf="@+id/btnOxa"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="29dp" />



    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream Clima"
            android:id="@+id/btnClima"
            android:layout_weight="1"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/btnOxa"
        android:layout_alignLeft="@+id/btnOxa"
        android:layout_alignStart="@+id/btnOxa" />



    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream OXA"
            android:id="@+id/btnOxa"
            android:layout_weight="1"
        android:layout_alignTop="@+id/btnMotion"
        android:layout_alignLeft="@+id/btnRefreshSensors"
        android:layout_alignStart="@+id/btnRefreshSensors"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Readings"
        android:id="@+id/reading"
        android:layout_weight="1"
        android:layout_alignTop="@+id/btnClima"
        android:layout_alignLeft="@+id/btnMotion"
        android:layout_alignStart="@+id/btnMotion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Readings"
        android:id="@+id/all"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btnClima"
        android:layout_centerHorizontal="true" />


</RelativeLayout>