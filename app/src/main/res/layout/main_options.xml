<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnActivity"
        android:onClick="spinner"
        android:src="@drawable/activity"
        android:layout_alignTop="@+id/logout"
        android:layout_toLeftOf="@+id/reading"
        android:layout_toStartOf="@+id/reading" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/node"
        android:text="NODE Connect"
        android:id="@+id/btnPairedNodes"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/btnRefreshSensors"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageView
        android:id="@+id/btnRefreshSensors"
        android:src="@drawable/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="86dp" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream Motion"
        android:src="@drawable/stream_motion"
        android:id="@+id/btnMotion"
        android:layout_weight="1"
        android:layout_alignTop="@+id/btnOxa"
        android:layout_alignLeft="@+id/btnRefreshSensors"
        android:layout_alignStart="@+id/btnRefreshSensors" />


    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream OXA"
        android:src="@drawable/stream_oxa"
        android:id="@+id/btnOxa"
        android:layout_weight="1"
        android:layout_below="@+id/btnPairedNodes"
        android:layout_toStartOf="@+id/btnActivity"
        android:layout_marginTop="64dp"
        android:layout_alignRight="@+id/btnPairedNodes"
        android:layout_alignEnd="@+id/btnPairedNodes" />



    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Readings"

        android:src="@drawable/readings"
        android:id="@+id/reading"
        android:layout_weight="1"

        android:layout_alignTop="@+id/btnOxa"
        android:layout_alignLeft="@+id/syncDatabase"
        android:layout_alignStart="@+id/syncDatabase" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:src="@drawable/logout"
        android:id="@+id/logout"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/reading"
        android:layout_toLeftOf="@+id/btnMotion"
        android:layout_toStartOf="@+id/btnMotion" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Database"
        android:src="@drawable/sync"
        android:id="@+id/syncDatabase"
        android:layout_alignTop="@+id/btnRefreshSensors"
        android:layout_centerHorizontal="true" />



</RelativeLayout>